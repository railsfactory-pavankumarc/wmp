<h1>Edit post</h1>

<%= form_for @posts do |f| %>
<% if @posts.errors.any? %>
<h2>Errors:</h2>
<ul>
	<% @posts.errors.full_messages.each do |message| %>
	<li><%= message %></li>
<% end %>
</ul>
<% end %>


<p>
<%= f.label :title %><br />
<%= f.text_field :title %>
</p>
<p>
<%= f.label :content %><br />
<%= f.text_area :content %>
</p>
<p>
<%= f.submit "update post" %>
</p>
<% end %>